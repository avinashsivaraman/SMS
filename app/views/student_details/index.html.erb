<p id="notice"><%= notice %></p>

<h1>Listing Student Details</h1>

<table>
  <thead>
    <tr>
      <th>Student</th>
      <th>Student name</th>
      <th>Student phone number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @student_details.each do |student_detail| %>
      <tr>
        <td><%= student_detail.student_id %></td>
        <td><%= student_detail.student_name %></td>
        <td><%= student_detail.student_phone_number %></td>
        <td><%= link_to 'Show', student_detail %></td>
        <td><%= link_to 'Edit', edit_student_detail_path(student_detail) %></td>
        <td><%= link_to 'Destroy', student_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

